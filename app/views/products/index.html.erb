<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Image url</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.image_url,size: "100x100", class:"img-responsive")   %></td>
        <td><%= product.title %></td>
        <td><%= truncate(strip_tags(product.description), length: 80) %></td>
        <td><%= product.price %></td>
        <td><ul class="list-unstyled">
          <li><%= link_to 'Show', product %></li>
          <li><%= link_to 'Edit', edit_product_path(product) %></li>
          <li><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></li></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-default btn-lg" %>
